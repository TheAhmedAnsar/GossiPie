<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OTP_Verification.PhoneNumberInput">

<!--    android:layout_marginTop="90dp"-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="170dp"
            android:layout_height="170dp"
            app:srcCompat="@drawable/ic_baseline_perm_phone_msg_24"
            tools:ignore="ContentDescription,VectorDrawableCompat"
            tools:srcCompat="@drawable/ic_baseline_perm_phone_msg_24" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:text="Phone Verification"
            android:textColor="#8A2BE2"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/otp_caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="35dp"
            android:gravity="center"
            android:text="You will recieve a message with a verification code on your Phone Number"
            android:textColor="#595656"
            android:textSize="18sp" />


        <!--        <com.hbb20.CountryCodePicker-->
        <!--            android:id="@+id/countrycodepicker"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="45dp"-->
        <!--            android:layout_marginLeft="100dp"-->
        <!--            android:layout_marginRight="100dp"-->
        <!--            android:layout_marginBottom="10dp"-->
        <!--            android:gravity="center_horizontal"-->
        <!--            app:ccp_areaCodeDetectedCountry="true"-->
        <!--            android:layout_marginTop="18dp"-->

        <!--            app:ccp_autoDetectCountry="true" />-->

        <!--        android:background="@drawable/background_box"-->


        <EditText
            android:id="@+id/input_number"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="60dp"

            android:gravity="center"
            android:hint="Enter your phone number"
            android:imeOptions="actionDone"
            android:importantForAutofill="no"
            android:inputType="number"
            android:textColor="#B9ABAB"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />
        <!--        android:background="@drawable/background_box"-->


        <Button
            android:id="@+id/verifybutton0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="45dp"
            android:layout_marginRight="30dp"
            android:text="Continue"
            android:textColor="@color/whitecolor"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#F87A0CDF"

            tools:ignore="HardcodedText" />
        <!--        android:background="@drawable/button_background"-->

        <!--        app:cornerRadius="@android:dimen/app_icon_size"-->
        <!--        app:iconPadding="@dimen/material_emphasis_medium"-->


        <ProgressBar
            android:id="@+id/progressbar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:visibility="invisible" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
