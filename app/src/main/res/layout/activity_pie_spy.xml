<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EDEDED"
    android:padding="4dp"

    tools:context=".PIE_Features.PieSpy">
    <TextView
        android:id="@+id/etTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="rajitsok@gmail.com"
        android:visibility="gone"
        android:inputType="textEmailAddress"
        android:singleLine="true" />


    <TextView

        android:id="@+id/etSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
       android:text="Check Fake by GossiPie"
        android:visibility="gone"
        android:singleLine="true" />

    <EditText
        android:id="@+id/etMessage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="5dp"
        android:backgroundTint="@color/purple_200"
        android:gravity="top|start"
        android:hint="Enter the fake Text"

        android:inputType="textMultiLine" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <TextView
            android:layout_margin="2dp"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Adding photo(Optional)"
            android:textSize="15sp"/>
    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </RelativeLayout>



    <TextView
        android:id="@+id/tvAttachment"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:drawableStart="@drawable/ic_attach"
        android:visibility="gone" />


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="horizontal">




        <com.google.android.material.imageview.ShapeableImageView
            
            android:cropToPadding="true"
            android:id="@+id/firstview"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/background_imageview"
            android:layout_margin="5dp"

/>


        <ImageView
            android:id="@+id/secondview"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:scaleType="fitXY"
            android:layout_margin="5dp"
            android:src="@drawable/background_imageview"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.041" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            />

<!--        <Button-->
<!--            android:id="@+id/btSend"-->
<!--            android:layout_width="80dp"-->
<!--            android:layout_height="50dp"-->
<!--            android:autoLink="email"-->
<!--            android:text="Send"-->
<!--            app:layout_constraintBottom_toBottomOf="parent"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintHorizontal_bias="0.866"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintTop_toTopOf="parent"-->
<!--            app:layout_constraintVertical_bias="0.121" />-->


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingRight="8dp"
        android:paddingBottom="7dp"
        android:gravity="center|bottom"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btSend"
           app:cornerRadius="8dp"
android:textColor="@color/whitecolor"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:autoLink="email"
            android:layout_gravity="right"
            android:text="Send" />


    </LinearLayout>
